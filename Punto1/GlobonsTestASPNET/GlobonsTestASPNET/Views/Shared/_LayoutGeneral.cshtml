<!DOCTYPE html>

<html>
    <head>
        <title>GlobonsTest - @ViewBag.Title</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="google-signin-client_id" content="391526550090-8io14i9621d19u68d4t10bdfpf8lnefb.apps.googleusercontent.com">
        <!-- CSS -->
        <link href="~/Content/home/css/fonts.css" rel="stylesheet" />
        <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/css/general.css" rel="stylesheet" />
        <link href="~/Content/css/Operacion.css" rel="stylesheet" />
        <link rel="shortcut icon" href="~/Content/favicon.ico">
    </head>
    <body>

        <!-- Botones bootstrap -->
        <nav class="navbar navbar-default fondoceleste">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand titulomenu" href="#">GlobonsTest</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle urlmenu" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Personas<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="~/Persona/AgregarPersona">Agregar Personas</a></li>
                                <li><a href="~/Persona/VerPersonas">Editar/Eliminar Personas</a></li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle urlmenu" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Direcciones<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="~/Direccion/AgregarDireccion">Agregar Direcciones</a></li>
                                <li><a href="~/Direccion/VerDirecciones">Editar/Eliminar Direcciones</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        @RenderBody()
        <!-- Javascript -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
        <script src="~/Content/bootstrap/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
        @RenderSection("scripts", required: false)

    </body>
</html>

